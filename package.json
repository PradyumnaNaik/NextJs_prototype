{
  "name": "nextjs-ecommerce-learning",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --config config/.eslintrc.js",
    "lint:fix": "eslint . --config config/.eslintrc.js --fix",
    "lint:css": "stylelint \"**/*.css\" --config config/.stylelintrc.js --max-warnings 0",
    "lint:css:fix": "stylelint \"**/*.css\" --config config/.stylelintrc.js --fix",
    "lint:all": "npm run lint && npm run lint:css",
    "typecheck": "tsc --noEmit",
    "test": "jest --config config/jest.config.js",
    "test:coverage": "jest --config config/jest.config.js --coverage",
    "validate": "npm run typecheck && npm run lint:all && npm run test",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "next": "^15.1.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.1",
    "eslint": "^8.55.0",
    "eslint-config-next": "^15.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-security": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "identity-obj-proxy": "^3.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --config config/.eslintrc.js --fix"
    ],
    "*.css": [
      "stylelint --config config/.stylelintrc.js --fix"
    ]
  }
}
